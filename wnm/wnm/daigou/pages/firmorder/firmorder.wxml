  <!-- 收货人信息 -->
  <view class='consigneemess' bindtap='selectAddress'>
    <image class="selectimg" src='../../images/arrow_right.png'></image>
    <!-- 收货人 -->
    <view class='consignee'>
      <!-- 名字 -->
      <view class='consignee_name'>
        收货人：{{username}}
      </view>
      <!-- 电话 -->
      <view class='consignee_phone'>
        {{phone}}
      </view>
    </view>
    
    <!-- 收货地址 -->
    <view class='adress'>
      <!-- 图标 -->
      <image src='../../images/dza.png'></image>
      <text class='f-g'>收货地址：{{province}}{{city}}{{area}}{{address}}</text>      
    </view>
  </view>

