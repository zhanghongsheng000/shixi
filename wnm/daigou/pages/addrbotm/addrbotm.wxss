/* pages/addrbotm/addrbotm.wxss */
.myform{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 0 12px;
  font-size: 14px;
  color: #a9a9a9;
}
.inp{
  border-bottom: 1px solid #ebebeb;
  height: 50px;
  padding-left: 5px;
}
input{
  color: #a9a9a9;
  height: 50px;
  line-height: 50px;
}
.tip{
  color: #fe3853;
  font-size: 12px;
  height: 50px;
  line-height: 50px;
  background-color: #f6fffa;
}
.idcard{
  border: none;
  display: flex;
}
.idcard input{
  width: 60%;
}
.idcardtip{
  width: 40%;
  line-height:50px;
  color: black;
}
.btn{
  padding: 8px 20px;
}
button{
  background-color: #67da9f;
  width: 90%;
  color: white;
  font-size: 14px;
  height: 50px;
  line-height: 50px;
}
.picker{
  height: 50px;
  line-height: 50px;
}