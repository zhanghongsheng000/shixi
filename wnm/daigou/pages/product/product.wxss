@import "../../wxParse/wxParse.wxss";
.img{
  padding: 10px;
  height: 250px;
}
.img image{
  width: 100%;
  height: 100%;
}
.pro {
  padding: 0 10px;
  
}
.name{
  font-size: 14px;
  height: 20px;
  line-height: 20px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;  
}
.origin{
  font-size: 14px;
  height: 20px;
  line-height: 20px;
  padding: 8px 0;
  border-bottom:1px solid #e0e0e0;
}
.color-gray{
  font-size: 12px;
  color: #999999;
}
.color-blue{
  padding-left: 5px;
  color: #5a91e1;
}
.price{
  padding: 5px 8px;
  
}
.price view{
  display: inline-block;
  width: 50%;
}
.nowprice{
  font-weight: bold;
  color: #ed3f3e;
  font-size: 18px;
}
.shoppeprice{
  font-size:14px; 
  color: #999999;
}
.commonprice{
  color: #ed3f3e;
 
}
.countdown{
  color:#656565;
  font-size: 12px;
  padding: 5px 8px;
}
.empty{
  background-color: #f5f5f5;
  height: 12px;
}
.section{
  height: 50px;
}
.picker{
  height: 100%;
  font-size: 12px;
  line-height: 50px;
  padding: 0 10px;
}
.shop{
  position: relative;
  padding: 0 10px;
  height: 50px;
  font-size: 12px;
  line-height: 50px;
} 
/* .parameter{
  padding: 0 10px;
  height: 50px;
  font-size: 10px;
  line-height: 50px;
} */

.list{
  width: 15px;
  height: 20px;
  margin-top: 15px;
  position: absolute;
  right: 25px;
}
details{
  height: 100px;
}
.footer {
  border-top: 1px solid #c1c1c3;
  height: 60px;
  position: fixed;
  bottom: 0;
  font-size: 10px;
  width: 100%;
  background-color: white;
  display: flex;
  display: -webkit-flex;
}
.nav{
  width:20%;
  display: flex;
  display: -webkit-flex;
  flex-direction:column;
  justify-content:center;
  height: 60px;
  align-items: center;
  box-sizing: border-box;
}
.nav:nth-child(1){
   border-right: 1px solid #999999;
}
.nav image{
  width: 25px;
  height: 25px;
}
.gz{
  width: 60px;
  height: 30px;
  margin-top: 10px;
  position: absolute;
  right: 25px;
}
.add{
  color: white;
  font-size: 14px;
  background-color: #fe7e8d;
  width: 30%;
  line-height: 60px;
}
.buy{
  color: white;
  font-size: 14px;
  background-color: #ff2741;
  width: 30%;
  line-height: 60px;
}
.empty1{
  height: 60px;
}
.tap view{
  width: 50%;
  display: inline-block;
  text-align: center;
  font-size: 14px;
  height: 50px;
  line-height: 50px;
  box-sizing: border-box;
}
.tap view:nth-child(1){
  border-right: 1px solid #999999;
}
.popup{
  padding: 10px;
}
.popup-header{
  border-bottom: 1px solid #999999;
  display: flex;

}
.popup-img{
  width: 60px;
  height: 100px; 
  margin-top: -20px;
}
.popup-txt{
  flex-direction:column;
  padding: 8px; 
}
.popup-txt-name{
  width: calc(100% - 60px);
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap; 
}
.popup-txt-discount{
  font-size: 10px;
  color: #9e9e9e;
}
.discount{
  color: #ff345f;
}
.popup-txt-price{
  color: #fd2840;
  font-size: 16px;
}
.popup-spec{
  border-bottom: 1px solid #999999;
  padding-bottom: 10px;
}
.popup-spec view:nth-child(1){
  text-align: left;
}
.popup-spec view{
  height: 30px;
  width: 70px;
  line-height: 30px;
  display: inline-block;
  margin-right:20px; 
  font-size:  12px;
  border: 1px solid #999999;
  text-align: center;
}
.popup-spec view:nth-child(1){
  display: block;
  border: none;
}
.select{
  background-color: #ff2742;
  color: white;
  border: none;
}
.popup-add{
  margin-left: -10px;
  height: 40px;
  background-color: #ff2741;
  color: white;
  line-height: 40px;
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 100%;
  font-size: 14px;
}
.popup-num{
  display: flex;
  /* justify-content:space-between; */
  margin-bottom: 45px;
  font-size: 12px;
  position: relative;
}
.popup-num-num{
  padding-top: 15px;
  width: 50%;
  text-align: left;
}
.changenum{
  padding: 10px 0;
  position: absolute;
  right: 0;
  display: flex;
}
.changenum view{
  width: 30px;
  height: 26px;
  line-height: 26px;
  text-align: center;
  
  background-color: white;
  display: inline-block;
}
.changenum input{
  display: inline-block;
  width: 30px;
  height: 25px;
  border: 1px solid #999999;
  text-align: center;
}
.clear{
  clear: both;
  overflow: hidden;
}
  .popup-pos{
  background-color: white;
   position: fixed; 
  bottom: 0;
  z-index: 999;
  width:calc(100% - 20px);
}  
.zhezhao{
  background-color: #757575;
  width: 100%;
  height: 100%;
  z-index: 555;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.5;
}
.numoff{
  border: 1px solid #e8e8e8;
}
.numon{
  border: 1px solid #999999;
}
.on{
  background-color: gray;
}
.off{
  background-color: white;
}
